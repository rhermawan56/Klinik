                        </RelativeLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/dokter_card5"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        app:cardCornerRadius="7dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="117dp">

                            <TextView
                                android:id="@+id/card5_title1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_toEndOf="@+id/profileimage5"
                                android:fontFamily="@font/abeezee"
                                android:maxLines="3"
                                android:padding="8dp"
                                android:text="dr. Puji Ichtiarti, Sp. OG"
                                android:textColor="#222"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/card5_text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignStart="@+id/card5_title1"
                                android:layout_below="@+id/card5_text2"
                                android:fontFamily="@font/abeezee"
                                android:maxLines="3"
                                android:padding="8dp"
                                android:text="Klinik Utama Handayani"
                                android:textColor="#666"
                                android:textSize="16dp" />

                            <TextView
                                android:id="@+id/card5_text2"
