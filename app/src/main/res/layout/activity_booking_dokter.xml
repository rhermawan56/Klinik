                                android:fontFamily="@font/abeezee"
                                android:maxLines="3"
                                android:padding="8dp"
                                android:text="Dokter Gigi"
                                android:textColor="#666"
                                android:textSize="16dp" />

                            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
